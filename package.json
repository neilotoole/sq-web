{
  "name": "sq.io",
  "description": "Website for sq",
  "engines": {
    "bun": ">=1.2"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/neilotoole/sq-web",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "bun run clean",
    "start": "exec-bin node_modules/.bin/hugo/hugo server --logLevel info --disableFastRender --bind=0.0.0.0",
    "prebuild": "bun run clean",
    "build": "exec-bin node_modules/.bin/hugo/hugo --gc --minify",
    "postbuild": "shx cat static/_redirects >> public/_redirects",
    "build:preview": "bun run build -D -F",
    "build:local": "exec-bin node_modules/.bin/hugo/hugo --gc --minify -b 'http://localhost:1313'",
    "prepreview": "bun run clean",
    "preview": "bun run build:local && bunx serve -l 1313 public",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf bun.lock node_modules",
    "lint": "bun run --silent lint:scripts && bun run --silent lint:styles && bun run --silent lint:markdown && bun run --silent lint:links",
    "lint:links": "./linkinator.sh",
    "lint:links-prod": "bunx linkinator --config ./linkinator.config.json -r https://sq.io",
    "lint:links-local": "bunx linkinator --config ./linkinator.config.json -r http://localhost:1313/",
    "lint:scripts": "bunx eslint assets/js",
    "lint:scripts-fix": "bunx eslint --fix assets/js",
    "lint:styles": "bunx stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:styles-fix": "bunx stylelint --fix \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "bunx markdownlint-cli2",
    "lint:markdown-fix": "bunx markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "hugo:mod-get": "exec-bin node_modules/.bin/hugo/hugo mod get -u --logLevel info cj.rs/gohugo-asciinema",
    "hugo:mod-init": "exec-bin node_modules/.bin/hugo/hugo mod init github.com/neilotoole/sq-web",
    "test": "bun run --silent lint",
    "env": "env",
    "precheck": "bun --version",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "gen:cmd-help": "./content/en/docs/cmd/generate-cmd-help.sh",
    "gen:syntax-css": "./generate-syntax-css.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.20",
    "@babel/core": "^7.20",
    "@babel/preset-env": "^7.20",
    "@fullhuman/postcss-purgecss": "^5.0",
    "@hyas/images": "^0.2.2",
    "@netlify/plugin-lighthouse": "^6.0.4",
    "asciinema-player": "^3.0.1",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4",
    "bootstrap": "^5.2.3",
    "esbuild": "^0.17.0",
    "eslint": "^8.32.0",
    "eslint-config-google": "^0.14.0",
    "exec-bin": "^1.0.0",
    "flexsearch": "^0.7.43",
    "hugo-installer": ">=4.0.1",
    "instant.page": "^5.1",
    "katex": "^0.16",
    "lazysizes": "^5.3",
    "linkinator": "^4.1.2",
    "markdownlint-cli2": "^0.20.0",
    "netlify-cli": "^23.13.4",
    "netlify-plugin-submit-sitemap": "^0.4.0",
    "node-fetch": "^3.3.1",
    "nord": "^0.2.1",
    "postcss": "^8.4",
    "postcss-cli": "^10.1",
    "purgecss-whitelister": "^2.4",
    "serve": "^14.2.0",
    "shx": "^0.3.4",
    "stylelint": "^14.16",
    "stylelint-config-standard-scss": "^6.1",
    "watch": "^1.0.2"
  },
  "otherDependencies": {
    "hugo": "0.122.0"
  }
}
