{
  "name": "sq.io",
  "description": "Website for sq",
  "engines": {
    "node": ">=18.12.1"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/neilotoole/sq-web",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "npm run clean",
    "start": "exec-bin node_modules/.bin/hugo/hugo server --bind=0.0.0.0 --disableFastRender",
    "prebuild": "npm run clean",
    "build": "exec-bin node_modules/.bin/hugo/hugo --gc --minify",
    "build:preview": "npm run build -D -F",
    "build:local": "exec-bin node_modules/.bin/hugo/hugo --gc --minify -b 'http://localhost:1313'",
    "prepreview": "npm run clean",
    "preview": "npm run build:local && npx serve -l 1313 public",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf package-lock.json node_modules ",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown && npm run -s lint:links",
    "lint:links": "./linkinator.sh",
    "lint:scripts": "npx eslint assets/js",
    "lint:scripts-fix": "npx eslint --fix assets/js",
    "lint:styles": "npx stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:styles-fix": "npx stylelint --fix \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "npx markdownlint-cli2",
    "lint:markdown-fix": "npx markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "test": "npm run -s lint",
    "env": "env",
    "precheck": "npm version",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "copy:katex-fonts": "shx cp ./node_modules/katex/dist/fonts/* ./static/fonts/",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "gen:cmd-help": "./content/en/docs/cmd/generate-cmd-help.sh",
    "gen:syntax-css": "./generate-syntax-css.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.20",
    "@babel/core": "^7.20",
    "@babel/preset-env": "^7.20",
    "@fullhuman/postcss-purgecss": "^5.0",
    "@hyas/images": "^0.2.2",
    "@netlify/plugin-lighthouse": "^4.0.3",
    "asciinema-player": "^3.0.1",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4",
    "bootstrap": "^5.2.3",
    "esbuild": "^0.17.0",
    "eslint": "^8.32.0",
    "eslint-config-google": "^0.14.0",
    "exec-bin": "^1.0.0",
    "flexsearch": "^0.7.31",
    "hugo-installer": ">=4.0.1",
    "instant.page": "^5.1",
    "katex": "^0.16",
    "lazysizes": "^5.3",
    "linkinator": "^4.1.2",
    "markdownlint-cli2": "^0.6.0",
    "netlify-cli": "^12.9.2",
    "netlify-plugin-submit-sitemap": "^0.4.0",
    "node-fetch": "^3.3",
    "nord": "^0.2.1",
    "postcss": "^8.4",
    "postcss-cli": "^10.1",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.3.4",
    "stylelint": "^14.16",
    "stylelint-config-standard-scss": "^6.1",
    "watch": "^1.0.2"
  },
  "otherDependencies": {
    "hugo": "0.109.0"
  }
}
